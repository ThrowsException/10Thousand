extends layout

block content
  div.container
    h1 Login
    
    form(action='login' role='form' method='POST')
      
      div.form-group
        input#email.form-control(placeholder='Email' name="email")
      div.form-group
        input#password.form-control(type='password' placeholder='Password' name="password")
      div.form-group
        input#login(type='submit' class="btn btn-default")