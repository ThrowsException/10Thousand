extends layout

block content
    h1 Signup
    
    form(action='user' role='form' method='POST')
      
      div.form-group
        input#email.form-control(placeholder='Email' name="email")
      div.form-group
        input#password.form-control(type='password' placeholder='Password' name="password")
      div.form-group
        input#signup(type='submit' class="btn btn-default")